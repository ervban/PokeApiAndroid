<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal -->
    <item android:drawable="@drawable/pokemon_button_normal" />

    <!-- Estado presionado -->
    <item android:drawable="@drawable/pokemon_button_pressed" android:state_pressed="true" />

    <!-- Estado enfocado -->
    <item android:drawable="@drawable/pokemon_button_pressed" android:state_focused="true" />

    <!-- Estado deshabilitado -->
    <item android:drawable="@drawable/pokemon_button_disabled" android:state_enabled="false" />
</selector>